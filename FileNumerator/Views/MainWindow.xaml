<Window x:Class="FileNumerator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FileNumerator.Viewmodels"
        xmlns:local="clr-namespace:FileNumerator.Views"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewmodel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Header="Fileextension settings" >
                <Grid MinHeight="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="File Search mode"/>
                        <ListView ItemsSource="{Binding Path=DeleteFileendings}"/>
                    </StackPanel>
                    <GroupBox Header="Some" Grid.Column="1" Style="{DynamicResource GroupboxHeadderBottomRight}">

                    </GroupBox>
                </Grid>
            </GroupBox>
            <Label>Ignore Fileextensions:</Label>
            <TextBox TextWrapping="Wrap" MinHeight="40"></TextBox>
            <Label>Delete From fileending</Label>
            <TextBox TextWrapping="Wrap" MinHeight="40"></TextBox>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label>Start Number</Label>
                    <TextBox Text="{Binding Path=StartNumber}"/>
                </StackPanel>
                <StackPanel>
                    <Label>End Number</Label>
                    <TextBox Text="{Binding Path=LastNumber}"/>
                </StackPanel>
            </StackPanel>
            <Grid>
                <Button Command="{Binding SelectDirectory}" HorizontalAlignment="Left" Content="Select Directory"/>
                <Button Command="{Binding RenameFiles}" HorizontalAlignment="Right" Content="Start"/>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
